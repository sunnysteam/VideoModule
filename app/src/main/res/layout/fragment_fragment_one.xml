<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginBottom="10dp"
              android:layout_marginLeft="30dp"
              android:layout_marginRight="30dp"
              android:layout_marginTop="10dp"
              android:orientation="vertical"
              tools:context="com.robot.tuling.app.Fragment_one">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            />
        <TextView
            android:id="@+id/remote_vedio_btn"
            style="@style/mainView_Button"
            android:drawableTop="@drawable/remote_vedio"
            android:text="远程视频"/>
        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/remote_audio_btn"
            style="@style/mainView_Button"
            android:drawableTop="@drawable/remote_audio"
            android:text="远程音频"/>

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            />
        <TextView
            android:id="@+id/commuicate_btn"
            style="@style/mainView_Button"
            android:drawableTop="@drawable/commuicate"
            android:text="聊天模式"/>

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            />
        <TextView
            android:id="@+id/home_control_btn"
            style="@style/mainView_Button"
            android:drawableTop="@drawable/home_control"
            android:text="智能家居"/>
        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            />
        <TextView
            android:id="@+id/family_btn"
            style="@style/mainView_Button"
            android:drawableTop="@drawable/family"
            android:text="家庭圈"/>
        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/navi_btn"
            style="@style/mainView_Button"
            android:drawableTop="@drawable/navi"
            android:text="导航"/>

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            />
        <TextView
            android:id="@+id/photo_btn"
            style="@style/mainView_Button"
            android:drawableTop="@drawable/photo"
            android:text="拍照"/>

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            />
        <TextView
            android:id="@+id/vedio_btn"
            style="@style/mainView_Button"
            android:drawableTop="@drawable/vedio"
            android:text="拍视频"/>

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            />
    </LinearLayout>

</LinearLayout>
