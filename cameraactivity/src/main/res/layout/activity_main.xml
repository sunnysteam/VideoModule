<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.robot.tuling.cameraactivity.MainActivity"
    android:orientation="vertical">

    <SurfaceView
        android:musicId="@+id/surfaceview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <ImageView
        android:musicId="@+musicId/imageview"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:src="@mipmap/ic_launcher_round"
        />

    <Button
        android:musicId="@+musicId/btnStartStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="开始"/>

    <Button
        android:musicId="@+musicId/btnPlayVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@musicId/btnStartStop"
        android:text="播放"
        />

    <TextView
        android:musicId="@+musicId/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="0"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="20dp"/>
</RelativeLayout>
